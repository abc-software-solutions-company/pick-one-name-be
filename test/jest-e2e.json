{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "verbose": true,
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@tests/(.*)$": "<rootDir>/__tests__/$1",
    "^@mocks/(.*)$": "<rootDir>/__mocks__/$1"
  },
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
